// ============================================
// 完整的 WC3 UI 测试文件
// 包含各种控件类型、内置纹理、字体等
// ============================================

// 包含官方模板
IncludeFile "UI\FrameDef\UI\EscMenuTemplates.fdf",

// ============================================
// 主面板 - BACKDROP
// ============================================
Frame "BACKDROP" "TestMainPanel" {
    Width 0.288,
    Height 0.384,
    
    SetPoint CENTER, "UIParent", CENTER, 0.0, 0.0,
    
    // 背景纹理 - 对话框边框
    BackdropTileBackground,
    BackdropBackground "EscMenuBackground",
    BackdropCornerFlags "UL|UR|BL|BR|T|L|B|R",
    BackdropCornerSize 0.032,
    BackdropBackgroundSize 0.256,
    BackdropBackgroundInsets 0.004 0.004 0.004 0.004,
    BackdropEdgeFile "EscMenuBorder",
    BackdropBlendAll,
}

// ============================================
// 标题文本 - TEXT
// ============================================
Frame "TEXT" "TestTitleText" INHERITS "EscMenuTitleTextTemplate" {
    SetPoint TOP, "TestMainPanel", TOP, 0.0, -0.030,
    Text "UI 测试面板",
    FontJustificationH JUSTIFYCENTER,
    FontJustificationV TOP,
    FontFlags "FIXEDSIZE",
}

// ============================================
// 按钮组
// ============================================

// 普通按钮 - GLUETEXTBUTTON
Frame "GLUETEXTBUTTON" "TestButton1" INHERITS WITHCHILDREN "EscMenuButtonTemplate" {
    SetPoint TOP, "TestMainPanel", TOP, 0.0, -0.067,
    Width 0.228,
    Height 0.035,
    
    ButtonText "TestButton1Text",
    Frame "TEXT" "TestButton1Text" INHERITS "EscMenuButtonTextTemplate" {
        Text "测试按钮 1",
    }
}

// 图标按钮 - GLUEBUTTON
Frame "GLUEBUTTON" "TestIconButton" {
    Width 0.036,
    Height 0.036,
    SetPoint TOPLEFT, "TestMainPanel", TOPLEFT, 0.020, -0.120,
    
    ControlBackdrop "TestIconButtonBackdrop",
    Frame "BACKDROP" "TestIconButtonBackdrop" {
        DecorateFileNames,
        BackdropBackground "CommandButton",
        BackdropCornerFlags "UL|UR|BL|BR|T|L|B|R",
        BackdropCornerSize 0.008,
        BackdropEdgeFile "CommandButtonBorder",
        BackdropBlendAll,
    }
    
    // 图标纹理
    ControlDisabledBackdrop "TestIconButtonDisabledBackdrop",
    Frame "BACKDROP" "TestIconButtonDisabledBackdrop" {
        DecorateFileNames,
        BackdropBackground "CommandButtonDisabled",
    }
}

// ============================================
// 复选框 - GLUECHECKBOX
// ============================================
Frame "GLUECHECKBOX" "TestCheckBox" INHERITS WITHCHILDREN "StandardCheckBoxTemplate" {
    SetPoint TOP, "TestButton1", BOTTOM, 0.0, -0.010,
    Width 0.228,
    Height 0.024,
}

// ============================================
// 输入框 - GLUEEDITBOX
// ============================================
Frame "GLUEEDITBOX" "TestEditBox" INHERITS WITHCHILDREN "BattleNetEditBoxTemplate" {
    SetPoint TOP, "TestCheckBox", BOTTOM, 0.0, -0.010,
    Width 0.228,
    Height 0.024,
}

// ============================================
// 滑块 - SLIDER
// ============================================
Frame "SLIDER" "TestSlider" {
    Width 0.228,
    Height 0.016,
    SetPoint TOP, "TestEditBox", BOTTOM, 0.0, -0.010,
    
    SliderLayoutHorizontal,
    SliderMinValue 0,
    SliderMaxValue 100,
    SliderInitialValue 50,
    SliderStepSize 1,
    
    // 滑块背景
    ControlBackdrop "TestSliderBackdrop",
    Frame "BACKDROP" "TestSliderBackdrop" {
        BackdropTileBackground,
        BackdropBackground "QuestBorder",
        BackdropBlendAll,
    }
    
    // 滑块按钮
    SliderThumbButtonFrame "TestSliderThumb",
    Frame "BUTTON" "TestSliderThumb" {
        Width 0.016,
        Height 0.016,
        
        ControlBackdrop "TestSliderThumbBackdrop",
        Frame "BACKDROP" "TestSliderThumbBackdrop" {
            DecorateFileNames,
            BackdropBackground "QuestButtonIcon",
        }
    }
}

// ============================================
// 下拉菜单 - POPUPMENU
// ============================================
Frame "POPUPMENU" "TestPopupMenu" {
    Width 0.228,
    Height 0.024,
    SetPoint TOP, "TestSlider", BOTTOM, 0.0, -0.010,
    
    PopupButtonInset 0.011,
    PopupTitleFrame "TestPopupMenuTitle",
    PopupArrowFrame "TestPopupMenuArrow",
    PopupMenuFrame "TestPopupMenuMenu",
    
    // 标题
    Frame "GLUETEXTBUTTON" "TestPopupMenuTitle" {
        Width 0.217,
        Height 0.024,
        
        ButtonText "TestPopupMenuTitleText",
        Frame "TEXT" "TestPopupMenuTitleText" {
            Text "选择选项",
            FontJustificationH JUSTIFYLEFT,
        }
    }
    
    // 下拉箭头
    Frame "GLUEBUTTON" "TestPopupMenuArrow" {
        Width 0.011,
        Height 0.011,
    }
    
    // 菜单
    Frame "MENU" "TestPopupMenuMenu" {
        Width 0.228,
        Height 0.120,
        
        MenuItem "选项 1",
        MenuItem "选项 2",
        MenuItem "选项 3",
        MenuItem "选项 4",
    }
}

// ============================================
// 文本区域 - TEXTAREA
// ============================================
Frame "TEXTAREA" "TestTextArea" {
    Width 0.228,
    Height 0.080,
    SetPoint TOP, "TestPopupMenu", BOTTOM, 0.0, -0.010,
    
    DecorateFileNames,
    
    // 滚动条
    ScrollBarFrame "TestTextAreaScrollBar",
    Frame "SCROLLBAR" "TestTextAreaScrollBar" {
        Width 0.012,
        Height 0.080,
        
        ScrollBarButtonFrame "TestTextAreaScrollBarButton",
        Frame "BUTTON" "TestTextAreaScrollBarButton" {
            Width 0.012,
            Height 0.012,
        }
    }
}

// ============================================
// 进度条 - SIMPLESTATUSBAR (使用 BACKDROP 模拟)
// ============================================
Frame "BACKDROP" "TestProgressBar" {
    Width 0.228,
    Height 0.016,
    SetPoint TOP, "TestTextArea", BOTTOM, 0.0, -0.010,
    
    // 背景
    BackdropTileBackground,
    BackdropBackground "QuestBorder",
    BackdropBlendAll,
}

Frame "BACKDROP" "TestProgressBarFill" {
    Width 0.114,  // 50%
    Height 0.012,
    SetPoint LEFT, "TestProgressBar", LEFT, 0.002, 0.0,
    
    BackdropTileBackground,
    BackdropBackground "GoldIcon",
    BackdropBlendAll,
}

// ============================================
// 图标网格 - 多个 BACKDROP
// ============================================
Frame "BACKDROP" "TestIcon1" {
    Width 0.032,
    Height 0.032,
    SetPoint BOTTOMLEFT, "TestMainPanel", BOTTOMLEFT, 0.020, 0.030,
    
    DecorateFileNames,
    BackdropBackground "ReplaceableTextures\CommandButtons\BTNHeroAlchemist.blp",
}

Frame "BACKDROP" "TestIcon2" {
    Width 0.032,
    Height 0.032,
    SetPoint LEFT, "TestIcon1", RIGHT, 0.004, 0.0,
    
    DecorateFileNames,
    BackdropBackground "ReplaceableTextures\CommandButtons\BTNHeroArchMage.blp",
}

Frame "BACKDROP" "TestIcon3" {
    Width 0.032,
    Height 0.032,
    SetPoint LEFT, "TestIcon2", RIGHT, 0.004, 0.0,
    
    DecorateFileNames,
    BackdropBackground "ReplaceableTextures\CommandButtons\BTNHeroPaladin.blp",
}

Frame "BACKDROP" "TestIcon4" {
    Width 0.032,
    Height 0.032,
    SetPoint LEFT, "TestIcon3", RIGHT, 0.004, 0.0,
    
    DecorateFileNames,
    BackdropBackground "ReplaceableTextures\CommandButtons\BTNHeroMountainKing.blp",
}

// ============================================
// 资源显示 - SIMPLEFRAME + Texture
// ============================================
Frame "SIMPLEFRAME" "TestResourceDisplay" {
    SetPoint TOPRIGHT, "TestMainPanel", TOPRIGHT, -0.020, -0.120,
    
    // 金币图标
    Texture {
        File "GoldIcon",
        Width 0.016,
        Height 0.016,
        Anchor TOPLEFT, 0.0, 0.0,
        TexCoord 0, 1, 0, 1,
        AlphaMode "BLEND",
    }
}

Frame "TEXT" "TestGoldAmount" {
    SetPoint LEFT, "TestResourceDisplay", RIGHT, 0.004, 0.0,
    Text "9999",
    FontColor 1.0 0.827 0.0705 1.0,
    FontJustificationH JUSTIFYLEFT,
}

// ============================================
// 模型预览 - MODEL
// ============================================
Frame "MODEL" "TestModelPreview" {
    Width 0.080,
    Height 0.080,
    SetPoint TOP, "TestMainPanel", TOP, 0.080, -0.120,
    
    Model "Units\Human\Footman\Footman.mdl",
    ModelSequence 0,
    ModelCamera "Camera01",
}

// ============================================
// 精灵动画 - SPRITE
// ============================================
Frame "SPRITE" "TestSprite" {
    Width 0.040,
    Height 0.040,
    SetPoint TOP, "TestMainPanel", TOP, -0.080, -0.120,
    
    SpriteAnimate,
    SpriteAnimSpeed 10,
    Texture {
        File "UI\Widgets\Console\Human\human-border-topleft.blp",
        Width 0.040,
        Height 0.040,
        Anchor CENTER, 0.0, 0.0,
    }
}// ============================================
// 高亮效果 - HIGHLIGHT
// ============================================
Frame "HIGHLIGHT" "TestHighlight" {
    Width 0.236,
    Height 0.043,
    SetPoint CENTER, "TestButton1", CENTER, 0.0, 0.0,
    
    HighlightType "FILETEXTURE",
    HighlightAlphaFile "HighlightAlpha",
    HighlightAlphaMode "ADD",
}

// ============================================
// 对话框 - DIALOG
// ============================================
Frame "DIALOG" "TestDialog" {
    Width 0.200,
    Height 0.150,
    SetPoint CENTER, "UIParent", CENTER, 0.3, 0.0,
    
    DialogBackdrop "TestDialogBackdrop",
    Frame "BACKDROP" "TestDialogBackdrop" {
        BackdropTileBackground,
        BackdropBackground "ToolTipBackground",
        BackdropCornerFlags "UL|UR|BL|BR|T|L|B|R",
        BackdropCornerSize 0.016,
        BackdropEdgeFile "ToolTipBorder",
        BackdropBlendAll,
    }
}

// ============================================
// 计时器文本 - TIMERTEXT
// ============================================
Frame "TIMERTEXT" "TestTimerText" {
    SetPoint BOTTOM, "TestMainPanel", BOTTOM, 0.0, 0.010,
    
    Text "00:00",
    FontColor 1.0 1.0 1.0 1.0,
    FontJustificationH JUSTIFYCENTER,
}

// ============================================
// 工具提示 - FRAME (容器)
// ============================================
Frame "FRAME" "TestTooltip" {
    Width 0.180,
    Height 0.060,
    SetPoint TOPLEFT, "TestMainPanel", TOPRIGHT, 0.010, 0.0,
    
    Frame "BACKDROP" "TestTooltipBackground" {
        SetAllPoints,
        BackdropTileBackground,
        BackdropBackground "ToolTipBackground",
        BackdropCornerFlags "UL|UR|BL|BR|T|L|B|R",
        BackdropCornerSize 0.012,
        BackdropEdgeFile "ToolTipBorder",
        BackdropBlendAll,
    }
    
    Frame "TEXT" "TestTooltipTitle" {
        SetPoint TOPLEFT, "TestTooltipBackground", TOPLEFT, 0.010, -0.010,
        Text "提示标题",
        FontColor 1.0 1.0 0.4 1.0,
        FontJustificationH JUSTIFYLEFT,
    }
    
    Frame "TEXT" "TestTooltipText" {
        SetPoint TOPLEFT, "TestTooltipTitle", BOTTOMLEFT, 0.0, -0.004,
        Width 0.160,
        Text "这是一个工具提示文本，可以显示详细信息。",
        FontColor 0.8 0.8 0.8 1.0,
        FontJustificationH JUSTIFYLEFT,
    }
}

